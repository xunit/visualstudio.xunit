<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="SwapXunitTestAdapterLibs" AfterTargets="_ComputeAppxPackagePayload" BeforeTargets="_GenerateAppxManifest">
    <Message Text="Swapping WPA xUnit Test Adapter Libs" />

    <ItemGroup>
      <xUnitLibs Include="$(MSBuildThisFileDirectory)..\..\lib\Wpa81\WinRT\xunit.runner.visualstudio.testadapter.dll">
        <TargetPath>xunit.runner.visualstudio.testadapter.dll</TargetPath>
      </xUnitLibs>
      <xUnitLibs Include="$(MSBuildThisFileDirectory)..\..\lib\Wpa81\WinRT\xunit.runner.visualstudio.testadapter.pri">
        <TargetPath>xunit.runner.visualstudio.testadapter.pri</TargetPath>
      </xUnitLibs>

      <xUnitLibsToRemove Include="@(AppxPackagePayload)" Condition="'%(TargetPath)' == 'xunit.runner.visualstudio.testadapter.dll'"/>
      <xUnitLibsToRemove Include="@(AppxPackagePayload)" Condition="'%(TargetPath)' == 'xunit.runner.visualstudio.testadapter.pdb'"/>


      <AppxPackagePayload Remove="@(xUnitLibsToRemove)" />
      <AppxPackagePayload Include="@(xUnitLibs)" />
    </ItemGroup>

  </Target>
</Project>
